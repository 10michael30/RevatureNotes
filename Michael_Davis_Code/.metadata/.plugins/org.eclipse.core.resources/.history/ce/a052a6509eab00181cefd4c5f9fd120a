import com.ex.util.ConnectionUtil;

public class Main {
	
	public static void main(String[] args) {
		Bear b=new Bear();
		b.setBreed("Polar");
		b.setFurColor("Brown");
		b.setHeight(80.9);
		
		BearDao a=new BearDao();
		a.addBear(b);
		
		
		
	}
	static void addBearDemo() {
		Session session= ConnectionUtil.getSession();
		Transaction tx=session.beginTransaction();
		
		Honey h1=new Honey();
		h1.setAmount(23);
		h1.setHoney("rasberry");
		Honey h2=new Honey();
		h2.setAmount(43);
		h2.setHoney("organic");
		Honey h3=new Honey();
		h3.setAmount(53);
		h3.setHoney("Manuka");
	}

}
